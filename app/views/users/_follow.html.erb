<%= form_for(current_user.relationships.build(followed_id: @user.id),
             remote: true) do |f| %> <!-- ', remote: true' allows web pages to send requests asynchronously to the server without leaving the page to add Ajax to web forms -->
  <div><%= f.hidden_field :followed_id %></div>
  <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
<% end %>